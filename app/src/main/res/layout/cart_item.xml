<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <!-- Hình ảnh món ăn -->
    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Tên món và mô tả -->
    <TextView
        android:id="@+id/txtFoodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bún chả chấm"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgFood"
        app:layout_constraintTop_toTopOf="@+id/imgFood"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hà Nội Quán"
        android:textSize="14sp"
        android:textColor="#888888"
        app:layout_constraintStart_toStartOf="@+id/txtFoodName"
        app:layout_constraintTop_toBottomOf="@+id/txtFoodName" />

    <!-- Số lượng -->
    <LinearLayout
        android:id="@+id/quantityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/txtFoodName"
        app:layout_constraintTop_toBottomOf="@+id/txtLocation"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/txtDecrease"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"

            android:textColor="@color/red_text"
            android:textSize="20sp"
            android:background="@drawable/icon_tru"/>

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtIncrease"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
           android:background="@drawable/icon_add"
            android:textColor="@color/red_text"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Giá -->
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50000VND"
        android:textColor="@color/red_text"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtFoodName"
        app:layout_constraintTop_toBottomOf="@+id/quantityLayout"
        android:layout_marginTop="4dp"/>

    <!-- Nút Xóa -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/red_text"
        android:text="Xóa"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck"/>

</androidx.constraintlayout.widget.ConstraintLayout>
